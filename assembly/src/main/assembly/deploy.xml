<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>tomcat-overlay</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
	
		<!-- stuff that goes into shared -->
		<dependencySet>
			<outputDirectory>shared/lib</outputDirectory>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
		        <include>org.hibernate:hibernate-entitymanager</include>
		        <include>org.hibernate:hibernate-validator</include>
				<include>umu.sakai-contrib.kernel:sakai-umukernel-api:jar:*</include>
				<include>umu.sakai-contrib.kernel:sakai-umukernel-dao:jar:*</include>
				<include>umu.sakai-contrib.umujobs:umujobs-api:jar:*</include>
				<include>umu.sakai-contrib.umusync:umusync-api:jar:*</include>
				<include>umu.sakai-contrib.umusync:umusync-dao:jar:*</include>
				<include>umu.sakai-contrib.umusync:umusync-help:jar:*</include>		
			</includes>			
		</dependencySet>
		
		<!-- stuff that goes into components -->
		<dependencySet>
			<outputDirectory>components/sakai-umukernel-component</outputDirectory>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>umu.sakai-contrib.kernel:sakai-umukernel-component:war:*</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		
		<dependencySet>
			<outputDirectory>components/sakai-umujobs-component</outputDirectory>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>umu.sakai-contrib.umujobs:umujobs-pack:war:*</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		
		<dependencySet>
			<outputDirectory>components/sakai-umusync-component</outputDirectory>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>umu.sakai-contrib.umusync:umusync-pack:war:*</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		
		<!-- stuff that goes into webapps -->
        <dependencySet>
            <outputDirectory>webapps</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.war</outputFileNameMapping>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>umu.sakai-contrib.umusync:umusync-tool:war:*</include>
            </includes>
            <unpack>false</unpack>
        </dependencySet>

	</dependencySets>
</assembly> 