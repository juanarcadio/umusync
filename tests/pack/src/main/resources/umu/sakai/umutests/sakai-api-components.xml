<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- Mock UMU Secure Interceptor -->
    <bean id="umu.sakai.kernel.api.IUMUSecureInterceptor" class="umu.sakai.umutests.MockUMUSecureInterceptor"/>

	<!-- Mocks de Servicios de Sakai -->
	<bean id="org.sakaiproject.user.api.UserDirectoryService" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.user.api.UserDirectoryService</value></constructor-arg>
	</bean>	

	<bean id="org.sakaiproject.site.api.SiteService" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.site.api.SiteService</value></constructor-arg>
	</bean>	

	<bean id="org.sakaiproject.tool.api.ToolManager" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.tool.api.ToolManager</value></constructor-arg>
	</bean>	

	<bean id="org.sakaiproject.authz.api.AuthzGroupService" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.authz.api.AuthzGroupService</value></constructor-arg>
	</bean>	

	<bean id="org.sakaiproject.tool.api.SessionManager" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.tool.api.SessionManager</value></constructor-arg>
	</bean>	
	<bean id="org.sakaiproject.component.api.ServerConfigurationService" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.component.api.ServerConfigurationService</value></constructor-arg>
	</bean>	

	<bean id="org.sakaiproject.authz.api.FunctionManager" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.authz.api.FunctionManager</value></constructor-arg>
	</bean>	

	<bean id="org.sakaiproject.authz.api.SecurityService" class="umu.sakai.umutests.SakaiMockService" factory-method="createMock">
  		<constructor-arg><value>org.sakaiproject.authz.api.SecurityService</value></constructor-arg>
	</bean>	

</beans>
